<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LogAnalyzer.Desktop.Views.AnalyzeResultTabSwticherView">
    <UserControl.Styles>
        <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="Background" Value="{StaticResource YellowBorderBrush}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid Background="Transparent">
        <TabControl Margin="5">
            <TabItem Header="Анализ">
                <TextBlock Margin="5">This is tab 1 content</TextBlock>
            </TabItem>
            <TabItem Header="Список ошибок">
                <TextBlock Margin="5">This is tab 2 content</TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
